{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["@types/node"],
    "moduleResolution": "node",
    "sourceMap": true,
    "lib": ["esnext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
} 